{
  "expo": {
    "name": "Glow Pro",
    "slug": "glow-pro",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "glowpro",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.glowprotocol.pro",
      "infoPlist": {
        "NSCameraUsageDescription": "Glow Pro needs camera access for certified medical photography."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#ffffff"
      },
      "package": "com.glowprotocol.pro",
      "permissions": ["CAMERA"]
    },
    "plugins": [
      "expo-router",
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "Glow Pro needs camera access for certified medical photography.",
          "enableMicrophonePermission": false,
          "enableLocationPermission": false
        }
      ],
      "react-native-reanimated/plugin"
    ]
  }
}
